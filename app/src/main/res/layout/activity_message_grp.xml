<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- RecyclerView for displaying messages -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMessages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- EditText and Button for sending messages -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText android:layout_weight="1" android:id="@+id/editTextMessage"
            android:layout_height="45dp" android:layout_width="0dip">
            <requestFocus></requestFocus>
        </EditText>
        <Button android:text="Send"
            android:layout_height="45dp" android:layout_width="125dp"
            android:id="@+id/buttonSend"></Button>


    </LinearLayout>
</LinearLayout>
